@page
@model IndexModel
@{
    ViewData["Title"] = "Call Center AI";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">AI Call Center - Virtual Agent</h2>
                </div>
                <div class="card-body">
                    <form method="post" id="callForm">
                        <div class="form-group mb-3">
                            <label for="phoneNumber">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                                   placeholder="+65XXXXXXXX" required
                                   asp-for="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="prompt">Prompt/Context</label>
                            <textarea class="form-control" id="prompt" name="prompt"
                                      rows="4" asp-for="Prompt"
                                      placeholder="Enter context or instructions for the AI..."></textarea>
                            <span asp-validation-for="Prompt" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" disabled="@Model.IsCalling" id="initiateCall">
                                <i class="fas fa-phone-alt me-2">Make a Call</i>
                            </button>
                        </div>
                        <div class="form-group mb-3">
                            <label for="selectPrompt">Select a Prompt</label>
                            <ul class="list-group">
                                @foreach (var item in Model.PromptOptions)
                                {
                                    <li class="list-group-item" onclick="updatePrompt('@item.Content')">
                                        @item.Title
                                    </li>
                                }
                            </ul>
                        </div>
                    </form>
                 
                    
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updatePrompt(content) {
        document.getElementById('prompt').value = content;
    }
</script>