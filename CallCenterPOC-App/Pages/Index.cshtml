@page
@model IndexModel
@{
    ViewData["Title"] = "Call Center AI";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Call Center AI</h2>
                </div>
                <div class="card-body">
                    <form method="post" id="callForm">
                        <div class="form-group mb-3">
                            <label for="phoneNumber">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                                   placeholder="+65XXXXXXXX" required
                                   asp-for="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="prompt">Prompt/Context</label>
                            <textarea class="form-control" id="prompt" name="prompt"
                                      rows="4" asp-for="Prompt"
                                      placeholder="Enter context or instructions for the AI..."></textarea>
                            <span asp-validation-for="Prompt" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" id="initiateCall" >
                                <i class="fas fa-phone-alt me-2"></i>Call
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>